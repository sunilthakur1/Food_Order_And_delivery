<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchimg"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/imageliquor"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/foods"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/liquorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="128dp"
            android:paddingTop="60dp"
            android:textColor="#8b0000"
            android:text="liquor name"/>

        <TextView
            android:id="@+id/liqprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingLeft="128dp"
            android:textColor="#000000"
            android:layout_marginTop="80dp"
            android:text="price"/>

        <TextView
            android:id="@+id/liqdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingLeft="128dp"
            android:textColor="#000000"
            android:layout_marginTop="100dp"
            android:text="Description"/>

    </RelativeLayout>

</LinearLayout>